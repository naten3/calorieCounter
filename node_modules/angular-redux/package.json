{
  "name": "angular-redux",
  "version": "1.0.0-beta",
  "description": "Redux helpers for Angular 2",
  "main": "lib/index.js",
  "scripts": {
    "start": "tsc --watch",
    "prebuild": "tsc",
    "build:normal": "webpack lib/index.js angularRedux.js --config webpack.config.js",
    "build:uglified": "webpack lib/index.js angularRedux.min.js --config webpack.config.js --uglify",
    "build": "npm run build:normal && npm run build:uglified",
    "prepublish": "npm run build",
    "pretest": "npm run build",
    "test": "mocha --compilers js:babel-register --require reflect-metadata --recursive"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ptMuta/angular-redux.git"
  },
  "keywords": [
    "angular",
    "redux"
  ],
  "author": "Joona Romppanen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ptMuta/angular-redux/issues"
  },
  "homepage": "https://github.com/ptMuta/angular-redux#readme",
  "dependencies": {
    "angular2": "^2.0.0-beta.0",
    "es6-promise": "^3.0.2",
    "es6-shim": "^0.33.3",
    "immutable": "^3.7.6",
    "invariant": "^2.2.0",
    "lodash": "^3.10.1",
    "redux": "^3.0.5",
    "redux-thunk": "^1.0.2",
    "reflect-metadata": "0.1.2",
    "rxjs": "5.0.0-beta.0",
    "zone.js": "0.5.10"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.3.13",
    "babel-register": "^6.3.13",
    "chai": "^3.4.1",
    "mocha": "^2.3.4",
    "typescript": "^1.7.5",
    "webpack": "^1.12.9"
  }
}
